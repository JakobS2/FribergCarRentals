@model FribergCarRentals.Pages.Rental.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <h1 class="divTitle">Delete</h1>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Rental.StartDate):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rental.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rental.EndDate):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rental.EndDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rental.Car):
        </dt>
